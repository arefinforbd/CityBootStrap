@model CityBootStrap.Models.City

@{
    ViewBag.Title = "City Explorer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">City Explorer</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-8" id="maintable">
                <div class="panel panel-info" style="padding: 10px;" id="panelCities">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            Cities :
                            <div class="btn-group">
                                <a class="btn btn-info dropdown-toggle dropdown-cities" data-toggle="dropdown" href="#">
                                    <span data-bind="label">Select City</span> <span class="caret"></span>
                                </a>
                                <ul id="ulCities" class="dropdown-menu"></ul>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-table fa-fw"></i>
                        Folders
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive" id="divCityInfo">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>